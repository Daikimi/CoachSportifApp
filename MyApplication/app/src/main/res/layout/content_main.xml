<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/content_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:context="fr.univ_lille1.iut_info.fablety.coachsportif.MainActivity"
    tools:showIn="@layout/app_bar_main"><![CDATA[


        android:layout_width="match_parent"
        android:layout_height="match_parent">


    ]]>

    <Button
        android:layout_width="170dp"
        android:id="@+id/perte_poids"
        android:layout_alignBottom="@+id/home_coaching"
        android:layout_alignLeft="@+id/conseils_nutri"
        android:layout_alignStart="@+id/conseils_nutri"
        android:layout_alignTop="@+id/home_coaching"
        android:layout_height="150dp"
        android:text="Forfait perte de poids"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        />

    <Button
        android:layout_width="170dp"
        android:id="@+id/conseils_nutri"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="150dp"
        android:text="Conseils nutrionels"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"/>

    <Button
        android:layout_width="170dp"
        android:id="@+id/home_coaching"
        android:layout_below="@+id/reathletisation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:layout_height="150dp"
        android:text="Coaching à domicile"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"/>

    <Button
        android:layout_width="170dp"
        android:id="@+id/reathletisation"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="150dp"
        android:text="Reathlétisation"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/white"/>

    <Button
        android:layout_width="170dp"
        android:id="@+id/prepa_physique"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Préparation physique"
        android:background="@android:color/holo_purple"
        android:textColor="@android:color/white"/>

    <Button
        android:layout_width="170dp"
        android:id="@+id/autre"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Autre"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/white"/>

</RelativeLayout>
